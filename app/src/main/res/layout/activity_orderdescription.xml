<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <include
        android:id="@+id/toolbars"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbars"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOrderItems"
                style="@style/RecycleView"
                tools:listitem="@layout/item_order_list"
                android:layout_marginTop="@dimen/spacing_standard_new" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_standard_new"
                android:background="@drawable/bg_rectangle_order"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/spacing_standard_new"
                    android:paddingTop="@dimen/spacing_standard"
                    android:paddingEnd="@dimen/spacing_standard_new"
                    android:paddingBottom="@dimen/spacing_standard">

                    <TextView
                        style="@style/Heading"
                        android:text="Chi tiết đơn hàng"
                        android:textColor="@color/textColorPrimary" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_width"
                    android:layout_marginBottom="@dimen/spacing_standard"
                    android:background="@color/view_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/spacing_standard"
                    android:paddingEnd="@dimen/spacing_standard"
                    android:paddingBottom="@dimen/spacing_standard">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_standard"
                        android:layout_marginEnd="@dimen/spacing_standard"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/OrderTextView"
                            android:text="Mã đơn hàng:" />

                        <TextView
                            android:id="@+id/tvOrderId"
                            style="@style/OrderTextView"
                            android:layout_marginStart="@dimen/spacing_control"
                            android:textColor="@color/textColorPrimary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_standard"
                        android:layout_marginTop="@dimen/spacing_control"
                        android:layout_marginEnd="@dimen/spacing_standard"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/OrderTextView"
                            android:text="Ngày đặt hàng:" />

                        <TextView
                            android:id="@+id/tvOrderDate"
                            style="@style/OrderTextView"
                            android:layout_marginStart="@dimen/spacing_control"
                            android:textColor="@color/textColorPrimary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_control"
                        android:layout_marginStart="@dimen/spacing_standard"
                        android:layout_marginEnd="@dimen/spacing_standard"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/OrderTextView"
                            android:text="Trạng thái:" />

                        <TextView
                            android:id="@+id/tvStatus"
                            style="@style/OrderTextView"
                            android:layout_marginStart="@dimen/spacing_control"
                            android:textColor="@color/textColorPrimary" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/layout_paymentdetail" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_standard_new"
                android:layout_marginEnd="@dimen/spacing_standard_new"
                android:layout_marginBottom="@dimen/spacing_standard_new"
                android:background="@drawable/bg_rectangle_order"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/spacing_standard_new"
                    android:paddingTop="@dimen/spacing_standard"
                    android:paddingEnd="@dimen/spacing_standard_new"
                    android:paddingBottom="@dimen/spacing_standard">

                    <TextView
                        style="@style/Heading"
                        android:text="Đánh giá sản phẩm:"
                        android:textColor="@color/textColorPrimary" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/spacing_standard"
                    android:layout_marginBottom="@dimen/spacing_standard"
                    android:background="@color/view_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_standard"
                    android:layout_marginEnd="@dimen/spacing_standard"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/spacing_standard"
                    android:paddingEnd="@dimen/spacing_standard"
                    android:paddingBottom="@dimen/spacing_standard">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1"
                        android:theme="@style/RatingBar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/ratingBar"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/txtRatings"
                            style="@style/OrderTextView"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/spacing_control"
                            android:text="3"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_size_normal" />

                        <TextView
                            style="@style/OrderTextView"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/spacing_control"
                            android:text="/5"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/font_size_small" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>